{
    "_comment": "A sample configuration file for the layout of body of the application. If url is /home it will pick home.json for layout of body.",
    "dataUrl": "/person/profile",
    "dataUrlParams": [
        {
            "paramId": "personId",
            "paramMapping": {
                "type": "routeParam",
                "accessor": "profileId"
            }
        },
        {
            "paramId": "groupId",
            "paramMapping": {
                "type": "localStorage",
                "accessor": "profile.group.id"
            }
        }
    ],
    "sections": [
        {
            "name": "title",
            "span": 6,
            "type": "section",            
            "elements": [
                {
                    "name": "fullName",
                    "span": 12,
                    "type": "singleInput",
                    "dataPath": "",
                    "validations": [
                        {
                            "name": "length",
                            "condition": {
                                "min": {
                                  "value": 1,
                                  "message": "error.message.length.min"  
                                },
                                "max": {
                                    "value": 50,
                                    "message": "error.message.length.max"  
                                }
                            }
                        }
                    ]
                }, 
                {
                    "_comment": "The form type of element will have additional input elements in it inside formElements. You can also pass the url that will be used to save this form.",
                    "name": "profileForm",
                    "span": 12,
                    "type": "form",
                    "saveUrl": "/person/profile/save",
                    "validations": [],
                    "formElements": [
                        {
                            "name": "streetAddress",
                            "span": 12,
                            "type": "textArea",
                            "dataPath": "",
                            "validations": []
                        }
                    ]
                }
            ]
        },
        {
            "_comment": "A section can have further sections",
            "name": "orderDetail",
            "span": 6,
            "type": "section",
            "dataUrl": "/order/detail",
            "section": [
                {
                    "name": "product",
                    "span": 12,
                    "type": "section",
                    "elements": [
                        {
                            "name": "productTitle",
                            "span": 12,
                            "type": "inputText",
                            "dataPath": "",
                            "validations": []
                        }
                    ]
                }
            ]
        }
    ]
}