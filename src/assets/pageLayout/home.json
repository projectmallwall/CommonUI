{
    "_comment": "A sample configuration file for the layout of body of the application. If url is /home it will pick home.json for layout of body.",
    "sections": [
        {
            "name": "title",
            "span": 6,
            "type": "section",
            "dataUrl": "/person/profile",
            "dataUrlParams": [
                {
                    "paramId": "personId",
                    "paramMapping": {
                        "type": "routeParam",
                        "accessor": "profileId"
                    }
                },
                {
                    "paramId": "groupId",
                    "paramMapping": {
                        "type": "localStorage",
                        "accessor": "profile.group.id"
                    }
                }
            ],
            "elements": [
                {
                    "name": "fullName",
                    "span": 12,
                    "type": "singleInput",
                    "dataPath": "",
                    "validations": [
                        {
                            "name": "length",
                            "condition": {
                                "min": {
                                  "value": 1,
                                  "message": "error.message.length.min"  
                                },
                                "max": {
                                    "value": 50,
                                    "message": "error.message.length.max"  
                                }
                            }
                        }
                    ]
                }
            ]
        }
    ]
}